<h1>New Deal Analysis</h1>

<%= simple_form_for @deal do |f| %>

	<div class="property">
		<h3>Property Information</h3>
		<div class="row">
			<div class="col-lg-12 form-group">
				<%= f.input :address, label: "Address \n", input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-4 form-group">
				<%= f.input :city, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-4 form-group">
				<%= f.input :state, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-4 form-group">
				<%= f.input :zip, input_html: {class: 'form-control'} %>
			</div>
		</div>
		<hr>
	</div>

	<div class="financing">
		<h3>Financing Information</h3>
		<div class="row">
			<div class="col-lg-6 form-group">
				<%= f.input :purchase_price, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-6 form-group">
				<%= f.input :arv, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-6 form-group">
				<%= f.input :closing_costs, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-6 form-group">
				<%= f.input :estimated_repairs, input_html: {class: 'form-control'} %>
			</div>
		</div>
		<hr>
	</div>

	<div class="Loan">
		<h3>Loan Information</h3>
		<div class="row">
			<div class="col-lg-6 form-group">
				<%= f.input :down_payment, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-6 form-group">
				<%= f.input :interest_rate, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-6 form-group">
				<%= f.input :loan_points, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-6 form-group">
				<%= f.input :loan_years, input_html: {class: 'form-control'} %>
			</div>
		</div>
		<hr>
	</div>

	<div class="income">
		<h3>Property Income</h3>
		<div class="row">
			<div class="col-lg-6 form-group">
				<%= f.input :gross_rent, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-6 form-group">
				<%= f.input :other_income, input_html: {class: 'form-control'} %>
			</div>
		</div>
		<hr>
	</div>

	<div class="expenses">
		<h3>Fixed Expenses</h3>
		<div class="row">
			<div class="col-lg-4 col-md-6 form-group">
				<%= f.input :electricity, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-4 col-md-6 form-group">
				<%= f.input :water_sewer, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-4 col-md-6 form-group">
				<%= f.input :pmi, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-4 col-md-6 form-group">
				<%= f.input :insurance, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-4 col-md-6 form-group">
				<%= f.input :property_tax, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-4 col-md-6 form-group">
				<%= f.input :other_expenses, input_html: {class: 'form-control'} %>
			</div>
		</div>
		<hr>
		<h3>Variable Expenses</h3>
		<div class="row">
			<div class="col-lg-6 col-md-6 form-group">
				<%= f.input :vacancy, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-6 col-md-6 form-group">
				<%= f.input :repairs_maintenance, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-6 col-md-6 form-group">
				<%= f.input :cap_ex, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-6 col-md-6 form-group">
				<%= f.input :property_management, input_html: {class: 'form-control'} %>
			</div>
		</div>
		<hr>
	</div>
		
	<div class="row">
		<div class="submit">
			<%= f.submit 'Analyze', class: 'btn btn-primary btn-lg'%>
		</div>
	</div>

<% end %>