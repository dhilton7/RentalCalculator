<div class="header">
	<div class="row">
		<h1>Your Deals</h1>
		<%= link_to "Analyze New Deal", new_deal_path, class: 'btn btn-primary btn-lg' %>
	</div>
</div>

<div class="row">
	<%= search_form_for @q do |f| %>
		<div class="row">
			<div class="col-lg-4 col-md-4 form-group">
				<%= f.label :address_cont %>
				<%= f.search_field :address_cont, class: 'form-control' %>
			</div>
			<div class="col-lg-4 col-md-4 form-group">
				<%= f.label :status_eq %>
				<%= f.select :status_eq, Deal::STATUSES.map {|s| [s,s]}, include_blank: true, class: 'form-control' %>
			</div>
		</div>

		<%= f.submit class: 'btn btn-default btn-md' %>
	<% end %>
</div>

<div class="row">
	<table class="table">
		<thead>
			<th>Address</th>
			<th><%= sort_link(@q, :list_pirce, "Listing Price", default_order: :desc) %></th>
			<th><%= sort_link(@q, :purchase_price) %></th>
			<th>Cap Rate</th>
			<th>Actions</th>
		</thead>
		<tbody>
			<% @deals.each do |deal| %>
			<tr>
				<td><%= link_to deal.address_string, deal_path(deal) %></td>
				<td><%= number_to_currency(deal.list_price) %></td>
				<td><%= number_to_currency(deal.purchase_price) %></td>
				<td><%= "#{deal.purchase_cap_rate}%" %></td>
				<td><%= link_to "Edit", edit_deal_path(deal), class: 'btn btn-warning btn-sm'  %> <%= link_to "Delete", deal_path(deal), method: :delete, class: 'btn btn-danger btn-sm'  %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= will_paginate @deals %>
</div>