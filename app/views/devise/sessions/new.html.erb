<div class="row">
	<div class="col-lg-12 text-center">
		<h2>Log In</h2>
	</div>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="row">
		<div class="col-lg-6 form-group">
 	  	<%= f.input :email, required: false, autofocus: true, input_html: {class:'form-control'} %>
 	  </div>
 	  <div class="col-lg-6 form-group">
    	<%= f.input :password, required: false, input_html: {class:'form-control'} %>
    </div>
    <div class="col-lg-12 checkbox form-group">
    	<%= f.input :remember_me, input_html: {class: 'form-control'}, as: :boolean if devise_mapping.rememberable?  %>
    </div>
  </div>

  <div class="row">
  	<div class="col-lg-12">
    	<%= f.button :submit, "Log In", class: 'btn btn-primary btn-md' %> <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>

<div class="row">
	<div class="col-lg-12">
		<p>Create a new account? </p><%= link_to "Sign Up", new_registration_path(resource_name), class: 'btn btn-info' %>
</div>
