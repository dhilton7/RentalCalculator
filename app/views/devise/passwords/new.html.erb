<div class="row">
	<div class="col-lg-12 text-center">
		<h2>Forgot your password?</h2>
	</div>
</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="row">
  	<div class="col-lg-12 form-group">
    	<%= f.input :email, required: true, autofocus: true, input_html: {class: 'form-control'} %>
  	</div>
  	<div class="col-lg-12 form-group">
    	<%= f.button :submit, "Send me reset password instructions", class: 'btn btn-primary'%>
  	</div>
  </div>

<% end %>

<div class="row">
	<div class="col-lg-12">
		<%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-default' %>
		<%= link_to "Sign Up", new_registration_path(resource_name), class: 'btn btn-info' %>
	</div>
</div>
