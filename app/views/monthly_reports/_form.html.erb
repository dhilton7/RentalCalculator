<%= simple_form_for([@property, @report]) do |f| %>
	<div class="row">
		<div class="col-lg-6 col-md-6 form-group">
			<%= f.input :month_year, label: "Report Month", as: :string, input_html: {class: 'form-control datepicker'} %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<h4>Income Items</h4>
			<div id="income_items">
				<%= f.simple_fields_for :income_items do |fi| %>
					<%= render 'income_item', :f => fi %>
				<% end %>
				<div class='links form-group'>
					<%= link_to_add_association 'Add Income', f, :income_items, partial: 'income_item', class: 'btn btn-default' %>		
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<h4>Expense Items</h4>
			<div id="expense_items">
				<%= f.simple_fields_for :expense_items do |fi| %>
					<%= render 'expense_item', :f => fi %>
				<% end %>
				<div class='links'>
					<%= link_to_add_association 'Add Expense', f, :expense_items, partial: 'expense_item', class: 'btn btn-default' %>		
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 submit">
			<%= link_to 'Cancel', 'javascript:history.go(-1);', class: 'btn btn-default btn-lg pull-right' %>
			<%= f.submit "Save Report", class: 'btn btn-primary btn-lg btn-submit pull-right' %>
		</div>
	</div>
<% end %>

<script type="text/javascript">
	
	$(document).ready(function() {

		$('.datepicker').datepicker({
			format: "MM yyyy",
			startView: "months", 
			minViewMode: "months",
			orientation: 'bottom'
		});
	});

</script>