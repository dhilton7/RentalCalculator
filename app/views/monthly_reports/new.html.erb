<%= simple_form_for([@deal, @report]) do |f| %>

	<div class="row">
		<div class="col-lg-6 col-md-6 form-group">
			<%= f.input :start_date, label: "Start Date", input_html: {class: 'form-control'} %>
		</div>
		<div class="col-lg-6 col-md-6 form-group">
			<%= f.input :end_date, label: "End Date", input_html: {class: 'form-control'} %>
		</div>
	</div>

	<div id="financial_items">
		<%= f.simple_fields_for :financial_items do |fi| %>
			<%= render 'expense_item', :f => fi %>
		<% end %>
		<div class='links'>
      <%= link_to_add_association 'Add Expense', f, :financial_items, partial: 'expense_item', class: 'btn btn-default' %>
      <%= link_to_add_association 'Add Income', f, :financial_items, partial: 'income_item', class: 'btn btn-default' %>
    </div>
	</div>
	<hr>
	<%= f.submit "Create Report", class: 'btn btn-primary' %>
<% end %>