<div class="row">
	<div class="col-lg-12">
		<div class="header">
			<h1><%= @sheet.title %></h1>
			<%= link_to "New Entry", new_sheet_entry_path(@sheet), class: 'btn btn-primary btn-lg' %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-4">
		<div class="top-display">
			<label>Total Cashflow</label>
			<p><%= number_to_currency(@sheet.cash_flow) %></p>
		</div>
	</div>
	<div class="col-lg-4">
		<div class="top-display">
			<label>Total Expenses</label>
			<p><%= number_to_currency(@sheet.total_debt) %></p>
		</div>
	</div>
	<div class="col-lg-4 report-hero">
		<div class="top-display">
			<label>Net Operating Income</label>
			<p><%= number_to_currency(@sheet.noi) %></p>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<table class="table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Amount</th>
				<th>Account</th>
				<th>Property</th>
				<th>Category</th>
				<th>Description</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		<% @sheet.entries.each do |entry| %>
			<tr>
				<td><%= entry.date.strftime("%m/%d/%Y") %></td>
				<td><%= number_to_currency(entry.amount) %></td>
				<td><%= entry.account %></td>
				<td><%= entry.property %></td>
				<td><%= entry.entry_category %></td>
				<td><%= entry.description %></td>
				<td><%= link_to "Edit", edit_sheet_entry_path(@sheet, entry), class: 'btn btn-default' %></td>
			</tr>
		<% end %>
		</tbody>
		</table>
	</div>
</div>