<%= simple_form_for([@deal, @link]) do |f| %>
	<div class="row">
		<div class="col-lg-6 col-md-6 form-group">
			<%= f.input :name, label: "Name", input_html: {class: 'form-control'} %>
		</div>		
		<div class="col-lg-6 col-md-6 form-group">
			<%= f.input :url, label: "URL", input_html: {class: 'form-control'} %>
		</div>
	</div>
	<div class="row">
		<%= f.submit "Save Link", class: 'btn btn-primary btn-lg' %>
	</div>
<% end %>