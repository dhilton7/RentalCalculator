<%= simple_form_for([@deal, @link]) do |f| %>
	<div class="row">
		<div class="col-lg-4 col-md-4 form-group">
			<%= f.input :name, label: "Name", input_html: {class: 'form-control'} %>
		</div>		
		<div class="col-lg-8 col-md-8 form-group">
			<%= f.input :url, label: "URL", input_html: {class: 'form-control'} %>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-lg-12">
			<%= f.submit "Save Link", class: 'btn btn-primary btn-lg pull-right' %>
		</div>
	</div>
<% end %>