<%= simple_form_for @property do |f| %>
	<div class="property">
		<h3>Property Information</h3>
		<div class="row">
			<div class="col-lg-12 form-group">
				<%= f.input :address, label: "Address", input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-4 form-group">
				<%= f.input :city, input_html: {class: 'form-control'} %>
			</div>
			<div class="col-lg-4 form-group">
				<%= f.input :state, collection: ApplicationHelper::STATES, input_html: {class: 'form-control', id: 'states'} %>
			</div>
			<div class="col-lg-4 form-group">
				<%= f.input :zip, label: "ZIP Code", input_html: {class: 'form-control'} %>
			</div>
		</div>
	</div>
	<hr>

	<div class="row">
		<div class="col-lg-12 submit">
			<%= link_to 'Cancel', 'javascript:history.go(-1);', class: 'btn btn-default btn-lg pull-right' %>
			<%= f.submit 'Save Property', class: 'btn btn-primary btn-lg btn-submit pull-right'%>
		</div>
	</div>
<% end %>